{
  "settings": {
    "number_of_shards": 1,
    "analysis": {
      "filter": {
        "vn_edge_ngram": {
          "type": "edge_ngram",
          "min_gram": 2,
          "max_gram": 20
        }
      },
      "analyzer": {
        "vietnamese_analyzer": {
          "tokenizer": "icu_tokenizer",
          "filter": [
            "icu_folding"
          ]
        },
        "vn_edge_analyzer": {
          "tokenizer": "icu_tokenizer",
          "filter": ["lowercase", "icu_folding", "vn_edge_ngram"]
        },
        "vn_edge_search": {
          "tokenizer": "icu_tokenizer",
          "filter": ["lowercase", "icu_folding"]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "id": { "type": "keyword" },
      "name": {
        "type": "text",
        "analyzer": "vietnamese_analyzer",
        "fields": {
          "keyword": { "type": "keyword" },
          "suggest": {
            "type": "search_as_you_type",
            "analyzer": "vietnamese_analyzer"
          },
          "search_name": {
            "type": "text",
            "analyzer": "vn_edge_analyzer",
            "search_analyzer": "vn_edge_search"
          }
        }
      },
      "sort_description": {
        "type": "text",
        "analyzer": "vietnamese_analyzer"
      },
      "description": {
        "type": "text",
        "analyzer": "vietnamese_analyzer"
      },
      "suggest": {
        "type": "search_as_you_type",
        "analyzer": "vietnamese_analyzer"
      },
      "url_slug":{ "type": "text"},
      "price": { "type": "long" },
      "discount_price": { "type": "long" },
      "quantity": { "type": "long" },
      "thumbnail_url": { "type": "keyword" },

      "created_at": { "type": "date" },
      "updated_at": { "type": "date" },
      "sold": { "type": "integer" },
      "revenue": { "type": "long" },
      "average_rating": { "type": "half_float" },
      "total_reviews": { "type": "integer" },
      "visible": { "type": "boolean" },
      "restrict_status": { "type": "keyword" },

      "shop": {
        "type": "object",
        "properties": {
          "id": { "type": "keyword" },
          "name": {
            "type": "text",
            "analyzer": "vietnamese_analyzer",
            "fields": {
              "keyword": { "type": "keyword" }
            }
          }
        }
      },

      "category": {
        "type": "keyword"
      },
      "attributes": {
        "type": "nested",
        "properties": {
          "key_name": { "type": "keyword" },
          "display_name": { "type": "keyword" },
          "value": { "type": "keyword" }
        }
      }
    }
  }
}